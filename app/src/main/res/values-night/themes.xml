<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EwenG_EvalApp" parent="Theme.AppCompat.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_light</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorOnSecondary">@color/green_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/green_light</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="waveBackgroundIMG">@drawable/wave_background_dark</item>
        <item name="worldIMG">@drawable/world_dark</item>
        <item name="buttonColor">@color/green_light</item>
        <item name="iconColor">@color/black</item>


    </style>


    <style name="Theme.EwenG_EvalApp_NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_light</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorOnSecondary">@color/green_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/black</item>
        <item name="waveBackgroundIMG">@drawable/wave_background</item>
        <item name="worldIMG">@drawable/world_dark</item>
        <item name="buttonColor">@color/green_light</item>
        <item name="iconColor">@color/black</item>

    </style>
</resources>
